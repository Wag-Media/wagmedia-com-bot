{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ESNext",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "paths": { "@/*": ["./*"] },
    "baseUrl": ".",
    "types": ["jest", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "tests/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
